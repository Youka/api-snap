# Reference: https://EditorConfig.org

# Is top-level editorconfig
root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Documentation & configuration files
[{*.md,*.yml,*.yaml,*.json,*.graphql,*.toml,*.tpl}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
